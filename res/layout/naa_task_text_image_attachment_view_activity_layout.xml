<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tab7tabcontent.attachmentpresent.NAATaskTextImgAttachmentViewActivity" >

    <ScrollView
        android:id="@+id/naatask_textAttachment_textView_container_scrollView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/naatask_textAttachment_text_textView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="26sp" />
        </LinearLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/naatask_imgAttachment_image_imageView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@android:color/black"
        android:contentDescription="@string/naa_task_imgAttachment_image_imageView_contentDescription"
        android:scaleType="fitCenter"
        android:visibility="gone" />

</FrameLayout>