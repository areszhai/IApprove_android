<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/listview_item_bg"
    android:paddingBottom="6dp"
    android:paddingLeft="6dp"
    android:paddingRight="26dp"
    android:paddingTop="6dp" >

    <ImageView
        android:id="@+id/abc_avatar_imageView"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/abc_avatar_imageView_contentDescription"
        android:scaleType="centerCrop"
        android:src="@drawable/img_default_avatar" />

    <TextView
        android:id="@+id/abc_name_textView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerVertical="true"
        android:layout_marginLeft="4dp"
        android:layout_toRightOf="@id/abc_avatar_imageView"
        android:ellipsize="end"
        android:singleLine="true"
        android:textSize="16sp" />

</RelativeLayout>