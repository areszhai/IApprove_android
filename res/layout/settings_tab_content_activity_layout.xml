<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:iapprove="http://schemas.android.com/apk/res/com.futuo.iapprove"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="18dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingTop="18dp"
    android:scrollbars="none"
    tools:context=".tab7tabcontent.SettingsTabContentActivity" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/st_userProfileSetting_relativeLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/setting_single_item_bg"
            android:clickable="true"
            android:paddingBottom="12dp"
            android:paddingLeft="12dp"
            android:paddingRight="8dp"
            android:paddingTop="12dp" >

            <ImageView
                android:id="@+id/st_userProfileSetting_userAvatar_imageView"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:contentDescription="@string/st_userProfileSetting_userAvatar_imageView_contentDescription"
                android:scaleType="centerCrop"
                android:src="@drawable/img_dot_large_avatar" />

            <ImageView
                android:id="@+id/st_userProfileSetting_indicator_imageView"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:contentDescription="@string/stfi_indicator_imageView_contentDescription"
                android:src="@drawable/img_setting_item_indicator_arrow" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/st_userProfileSetting_indicator_imageView"
                android:layout_toRightOf="@id/st_userProfileSetting_userAvatar_imageView"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/st_userProfileSetting_userEmployeeName_textView"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="2dp"
                    android:layout_weight="1"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/st_userProfileSetting_userApproveNumber_textView"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:textSize="15sp" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/common_form_bg"
            android:orientation="vertical"
            android:padding="1.5dp" >

            <com.futuo.iapprove.customwidget.SettingFormItem
                android:id="@+id/st_rate_settingFormItem"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/common_form_multipletop_item_bg"
                iapprove:stfi_label="@string/st_rateSettingFormItem_label" >
            </com.futuo.iapprove.customwidget.SettingFormItem>

            <com.futuo.iapprove.customwidget.CommonFormSeparator
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <com.futuo.iapprove.customwidget.SettingFormItem
                android:id="@+id/st_support_settingFormItem"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/common_form_multiplemiddle_item_bg"
                iapprove:stfi_label="@string/st_supportSettingFormItem_label" >
            </com.futuo.iapprove.customwidget.SettingFormItem>

            <com.futuo.iapprove.customwidget.CommonFormSeparator
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <com.futuo.iapprove.customwidget.SettingFormItem
                android:id="@+id/st_feedback_settingFormItem"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/common_form_multiplemiddle_item_bg"
                iapprove:stfi_label="@string/st_feedbackSettingFormItem_label" >
            </com.futuo.iapprove.customwidget.SettingFormItem>

            <com.futuo.iapprove.customwidget.CommonFormSeparator
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <com.futuo.iapprove.customwidget.SettingFormItem
                android:id="@+id/st_about_settingFormItem"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/common_form_multiplemiddle_item_bg"
                iapprove:stfi_label="@string/st_aboutSettingFormItem_label" >
            </com.futuo.iapprove.customwidget.SettingFormItem>

            <com.futuo.iapprove.customwidget.CommonFormSeparator
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <com.futuo.iapprove.customwidget.SettingFormItem
                android:id="@+id/st_check4update_settingFormItem"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/common_form_multiplebottom_item_bg"
                iapprove:stfi_label="@string/st_check4updateSettingFormItem_label" >
            </com.futuo.iapprove.customwidget.SettingFormItem>
        </LinearLayout>

        <Button
            android:id="@+id/st_user_logout_button"
            android:layout_width="fill_parent"
            android:layout_height="44dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/user_logout_button_bg"
            android:shadowColor="@android:color/black"
            android:shadowDx="0"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:text="@string/st_user_logout_button_title"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/white" />
    </LinearLayout>

</ScrollView>