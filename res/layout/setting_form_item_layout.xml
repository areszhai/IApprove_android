<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="12dp"
    android:paddingLeft="12dp"
    android:paddingRight="8dp"
    android:paddingTop="12dp" >

    <ImageView
        android:id="@+id/stfi_indicator_imageView"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:contentDescription="@string/stfi_indicator_imageView_contentDescription"
        android:src="@drawable/img_setting_item_indicator_arrow" />

    <TextView
        android:id="@+id/stfi_label_textView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/stfi_indicator_imageView"
        android:textSize="16sp" />

</RelativeLayout>